<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/kenes_horizontal_spacing"
    android:layout_marginEnd="@dimen/kenes_horizontal_spacing"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/kenes_bg_notification"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="4dp"
        android:textColor="#E6A23C"
        android:textSize="13sp"
        tools:text="Notification" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="3dp"
        android:textColor="#909399"
        android:textSize="11sp"
        tools:text="04:20" />

</LinearLayout>