<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/kenes_horizontal_spacing"
    android:layout_marginEnd="@dimen/kenes_horizontal_spacing"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/kenes_bg_opponent_message"
        android:gravity="start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:minWidth="150dp"
            android:minHeight="150dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/fileView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kenes_bg_file"
            android:clickable="true"
            android:drawableStart="@drawable/kenes_ic_file_gray"
            android:drawablePadding="7dp"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingBottom="12dp"
            android:textColor="#60626A"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="file.txt"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2.5sp"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingBottom="12dp"
            android:textColor="#303133"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Message"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/attachmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/kenes_bg_button_light_blue_rounded_4dp"
        android:clickable="true"
        android:drawableStart="@drawable/kenes_selector_file"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:padding="10dp"
        android:textColor="@color/kenes_selector_blue"
        android:textSize="13sp"
        android:visibility="gone"
        tools:text="тарифы_день_в_день.pdf"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="3dp"
        android:textColor="#909399"
        android:textSize="11sp"
        tools:text="04:20" />

</LinearLayout>