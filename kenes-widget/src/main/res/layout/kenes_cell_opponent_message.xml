<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/kenes_horizontal_spacing"
    android:layout_marginEnd="@dimen/kenes_horizontal_spacing"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/kenes_bg_opponent_message"
        android:gravity="start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:minWidth="150dp"
            android:minHeight="150dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/fileView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kenes_bg_file"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            tools:visibility="visible">

            <FrameLayout
                android:id="@+id/indicatorView"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/kenes_ic_circle_blue">

                <ImageView
                    android:id="@+id/iconView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/kenes_ic_download_white" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:indeterminateBehavior="repeat"
                    android:max="100"
                    android:min="0"
                    android:progressDrawable="@drawable/kenes_ic_circular_progress"
                    tools:progress="25" />

            </FrameLayout>

            <TextView
                android:id="@+id/filenameView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:textColor="#60626A"
                android:textSize="14sp"
                tools:text="968845a0c925471ab8432163646098a1.jpg\n(PDF Документ) - Скачать файл" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2.5sp"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingBottom="12dp"
            android:textColor="#303133"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Message"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/attachmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/kenes_bg_button_light_blue_rounded_4dp"
        android:clickable="true"
        android:drawableStart="@drawable/kenes_selector_file"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:padding="10dp"
        android:textColor="@color/kenes_selector_blue"
        android:textSize="13sp"
        android:visibility="gone"
        tools:text="тарифы_день_в_день.pdf"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="3dp"
        android:textColor="#909399"
        android:textSize="11sp"
        tools:text="04:20" />

</LinearLayout>