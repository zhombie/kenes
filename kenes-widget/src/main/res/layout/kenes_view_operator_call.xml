<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/operatorCallView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/operatorCallContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/audioCallButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kenes_horizontal_spacing"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/kenes_horizontal_spacing"
            android:background="@drawable/kenes_bg_green"
            android:clickable="true"
            android:elevation="7dp"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/kenes_ic_phone_rounded_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue_bold"
                android:letterSpacing="0.015"
                android:text="@string/kenes_audio_call"
                android:textAllCaps="true"
                android:textColor="#74be8d"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/helvetica_roman"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="2sp"
                android:text="@string/kenes_audio_call_to_operator"
                android:textColor="#b4bacd"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/videoCallButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kenes_horizontal_spacing"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/kenes_horizontal_spacing"
            android:layout_marginBottom="40dp"
            android:background="@drawable/kenes_bg_blue"
            android:clickable="true"
            android:elevation="7dp"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/kenes_ic_camera_rounded_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue_bold"
                android:letterSpacing="0.015"
                android:text="@string/kenes_video_call"
                android:textAllCaps="true"
                android:textColor="#446bea"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/helvetica_roman"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="2sp"
                android:text="@string/kenes_video_call_to_operator"
                android:textColor="#b4bacd"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>